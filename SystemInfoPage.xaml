<Page
    x:Class="docrex.SystemInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docrex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="SystemInfoPageTitle" Text="System Info" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
        <ProgressRing x:Name="ProgressRing" IsActive="True" FontSize="24" Width="50" Height="50" />
        <RichTextBlock x:Name="SystemInfoDetails" HorizontalAlignment="Center" Margin="0,25,0,0" Visibility="Collapsed">
            <Paragraph FontSize="20">
                Docker server
                <Run Text="{x:Bind SystemInfo.Name}" FontWeight="Bold"></Run>
                version
                <Run Text="{x:Bind SystemInfo.ServerVersion}"></Run>
                on
                <Run Text="{x:Bind SystemInfo.OperatingSystem}"></Run>
                [
                <Run Text="{x:Bind SystemInfo.Architecture}"/>
                ] with 
                <Run Text="{x:Bind SystemInfo.NCPU}"/> CPUs,
                <Run Text="{x:Bind SystemInfo.NCPU}"/>GB RAM.
            </Paragraph>
        </RichTextBlock>
    </Grid>
</Page>
