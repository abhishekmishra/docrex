<Page
    x:Class="docrex.SystemInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docrex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="SystemInfoPageTitle" Text="System Info" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
        <RichTextBlock HorizontalAlignment="Center" Margin="0,25,0,0">
            <Paragraph>
                <Run Text="The system version is: "></Run>
                <Run Text="{x:Bind SystemInfo.ServerVersion}"></Run>
            </Paragraph>
        </RichTextBlock>
    </Grid>
</Page>
